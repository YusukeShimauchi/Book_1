<div class="container">

  <%= form_for @information, :url => { :controller => :informations, :action => :create } do |f| %>

    <div class="form-group">
      <%= f.label :タイトル %><br />
      <%= f.text_field :title, placeholder: 'title' %>
    </div>

    <div class="form-group">
      <%= f.label :イメージ画像 %><br />
      <%= f.text_area :image, placeholder: 'image_url' %>
    </div>

    <div class="form-group">
      <%= f.label :著者 %><br />
      <%= f.text_field :writer, placeholder: 'writer' %>
    </div>

    <div class="form-group">
      <%= f.label :概要 %><br />
      <%= f.text_area :text, placeholder: 'text' %>
    </div>

    <div class="form-group">
      <%= f.label :レビュー %><br />
      <%= f.text_area :review, placeholder: 'review' %>
    </div>

    <div style="margin: 8px 0">
      <%= f.label :本の評価 %><br />
      <%= f.number_field :rate, placeholder: '本の評価', value: 1, max: 5, min: 1 %>
    </div>

    <div class="form-group">
      <%= f.label :本の状態 %><br />
      <%= f.text_field :state, placeholder: 'state' %>
    </div>

    <div class="form-group">
      <%= f.label :値段 %><br />
      <%= f.text_field :price, placeholder: 'price' %>
    </div>

    <%= f.hidden_field :status, :value =>"1" %>

    <div class="row">
      <div class="col10 push1">
        <%= button_tag type: "submit", class: "btn btn--block" do %>
        出品する<i class="icon-arrow-right"></i>
        <% end %>
      </div>
    </div>

  <% end %>
</div>

